<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menubtn"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:src="@drawable/menubtn" />

            <TextView
                android:id="@+id/chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Chatbot"
                android:textSize="45dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:padding="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bot"
                    android:layout_width="130dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:src="@drawable/botimg" />

                <TextView
                    android:id="@+id/chat1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="정책알림e 입니다.\n궁금하신 사항은 \n아래의 자주묻는 질문을 확인!\n그밖에 질문은 1:1문의로\n남겨주시면 답변해드릴게요!"
                    android:textAlignment="center"
                    android:textSize="23sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="25dp">

            <Button
                android:id="@+id/faq"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:onClick="onClick_Faq"
                android:text="자주묻는질문"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inquiry"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:onClick="onClick_Inquiry"
                android:text="1:1문의"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/help"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:onClick="onClick_Help"
                android:text="도움말"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>