<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menuimage_non"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/menubtn" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/resetBtn_non"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:onClick="onClick_resetBtn"
            android:scaleType="centerCrop"
            android:layout_gravity="right"
            android:src="@drawable/logo" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            >

            <EditText
                android:id="@+id/input_searchWrd_non"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:background="@null"
                android:hint="검색어"
                android:textSize="20sp"
                android:layout_weight="0.7"

                />

            <Spinner
                android:id="@+id/check_search_non"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="5sp">

                <TextView
                    android:id="@+id/input_lifeArray_non"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="생애주기"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    />

                <Spinner
                    android:id="@+id/check_life_non"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp">

                <TextView
                    android:id="@+id/input_trgterIndvdlArray_non"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가구유형"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    />

                <Spinner
                    android:id="@+id/check_trgterIndvdlArray_non"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="5sp">

                <TextView
                    android:id="@+id/input_desireArray_non"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="관심주제"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:gravity="center"
                    />

                <Spinner
                    android:id="@+id/check_desireArray_non"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5sp"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        >

        <Button
            android:id="@+id/buttonAPI_List_non"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_round"
            android:onClick="onClick_serch_List_non"
            android:text="목록조회"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAPI_Detail_non"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClick_serch_Detail_non"
            android:layout_weight="1"
            android:background="@drawable/btn_round"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="상세정보검색"
            android:layout_marginLeft="20sp"
            />

    </LinearLayout>

    <ListView
        android:id="@+id/listView_nonmember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="20sp"
        android:dividerHeight="10px"
        android:divider="#00000000"
        />

</LinearLayout>